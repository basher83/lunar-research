{
  "description": "Auto-configure MCP API keys on session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/setup-mcp-keys.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
